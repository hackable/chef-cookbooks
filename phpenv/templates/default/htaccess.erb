<IfModule mod_rewrite.c>
    RewriteEngine on
    
    RewriteCond $1 !^(index\.php|assets|img|robots\.txt|favicon\.ico)

    RewriteRule ^(.*)$ index.php/$1 [L]
    
    php_flag display_startup_errors on
    
    php_flag display_errors on
    
    php_flag html_errors on
    
    php_flag  log_errors on
    
    php_value date.timezone 'GMT'
    
    <IfModule mod_env.c>
        # Environment Variables for application <%= @application %>

      <% @env[@application.to_s][:values].sort.each do | env_value | %> 
        SetEnv <%= env_value %> 
      <% end %>
    </IfModule>
</IfModule>
